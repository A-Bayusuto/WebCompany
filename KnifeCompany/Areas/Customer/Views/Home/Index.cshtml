@model IEnumerable<KnifeCompany.Models.Product>


<div class="row pb-3 backgroundWhite">
    @foreach (var product in Model)
    {
        if (@product.Status.ToString() == "True")   // only allow available stock
        {

            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@product.Picture" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color:#2c3e50">@product.Name</b></p>

                            </div>

                            <p class="card-title text-primary" hidden>
                                <b id="stock">@product.Price</b>
                            </p>

                            <div style="padding-left:5px;">
                                <p>Availability: <b class="">@product.Status</b></p>
                            </div>

                            <div style="padding-left:5px;">
                                <p>List Price: $ <b class="">@product.Price.ToString("0.00")</b></p>
                            </div>

                            @*<div style="padding-left:5px;">
                                <p>List Price: <strike><b class="">@product.Price.ToString("0.00")</b></strike></p>
                                </div>*@

                            @*<div style="padding-left:5px;">
                                <p style="color:maroon">As low as: <b class="">$$$$$PRICE100</b></p>
                                </div>*@
                        </div>
                        <div>
                            <a class="btn btn-primary form-control" asp-route-id="@product.Id" asp-action="Details" >Details</a>
                        </div>
                    </div>
                </div>
            </div>

        }


    }

</div>

